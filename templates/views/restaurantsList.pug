html
    head
        title Restaurants Available
        link(href = "/img/medal.png", rel = "icon")
        link(href = "/css/styles.css", rel = "stylesheet")
        link(rel = "stylesheet", href = "https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css")
    body
        div(class = 'container header mainContent')
            h1 Hotel's Search App
            h2 #{title}
            div
                a(href='/') Home
                a(href='/about') About
                a(href='/help') Help
        |
        br
        br
        |
        div(class = "container mainContent", id = 'content')
            for res in restaurantDetails
                div(class = 'data img-rounded floatLeft')
                    img(src =`${res.restaurant.thumb}`, alt="Restaurant Picture", height = '185', width = '185')
                div(class = 'data')
                    a(href=`/restaurant?res_Id=${res.restaurant.id}`, class = 'action_link', style='color: red; font-size: 25px;') #{res.restaurant.name}
                    |
                    br
                    |
                    strong #{res.restaurant.location.locality}
                    h5(style = 'color: aquamarine')
                        strong #{res.restaurant.location.address}
                    h4 
                        strong Cusinies:  #{res.restaurant.cuisines}
                        | 
                        br 
                        br
                        | 
                        strong Timings: #{res.restaurant.timings}
                        |
                        br
                        br 
                        |
                        strong Cost For Two: #{res.restaurant.currency} #{res.restaurant.average_cost_for_two}
                        |
                        hr
        div(class = 'footer')
            div
                a(href='/') Home
                a(href='/about') About
                a(href='/help') Help
            h4 Created by #{name}
